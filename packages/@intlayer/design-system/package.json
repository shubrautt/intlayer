{
  "name": "@intlayer/design-system",
  "version": "5.7.7",
  "private": false,
  "description": "Intlayer design system, including UI components used in the Intlayer editor, website, and visual editor/CMS.",
  "keywords": [
    "design-system",
    "intlayer",
    "react",
    "ui"
  ],
  "homepage": "https://intlayer.org",
  "bugs": {
    "url": "https://github.com/aymericzip/intlayer/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/aymericzip/intlayer.git"
  },
  "license": "Apache-2.0",
  "author": {
    "name": "Aymeric PINEAU",
    "url": "https://github.com/aymericzip"
  },
  "contributors": [
    {
      "name": "Aymeric Pineau",
      "email": "ay.pineau@gmail.com",
      "url": "https://github.com/aymericzip"
    }
  ],
  "sideEffects": false,
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/components/index.d.ts",
      "import": "./dist/components/index.mjs",
      "require": "./dist/components/index.cjs"
    },
    "./hooks": {
      "types": "./dist/hooks/index.d.ts",
      "import": "./dist/hooks/index.mjs",
      "require": "./dist/hooks/index.cjs"
    },
    "./libs": {
      "types": "./dist/libs/index.d.ts",
      "import": "./dist/libs/index.mjs",
      "require": "./dist/libs/index.cjs"
    },
    "./tailwind-config": {
      "types": "./dist/tailwind.config.d.ts",
      "import": "./dist/tailwind.config.mjs",
      "require": "./dist/tailwind.config.cjs"
    },
    "./css": "./src/tailwind.css",
    "./css-output": "./dist/tailwind.css"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "pnpm clean & pnpm build:ci",
    "build:ci": "pnpm build:package",
    "build:css": "npx tailwindcss --minify -i ./src/tailwind.css -o ./dist/tailwind.css",
    "build:package": "vite build",
    "build:storybook": "storybook build",
    "clean": "rimraf ./dist",
    "dev": "vite build --watch",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "prettier": "prettier . --check",
    "prettier:fix": "prettier . --write",
    "preview": "vite preview",
    "storybook": "storybook dev -p 6006",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest --watch",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.0.1",
    "@intlayer/api": "workspace:*",
    "@intlayer/config": "workspace:*",
    "@intlayer/core": "workspace:*",
    "@intlayer/dictionaries-entry": "workspace:*",
    "@intlayer/editor-react": "workspace:*",
    "@monaco-editor/react": "^4.7.0",
    "@radix-ui/react-dialog": "^1.1.4",
    "@radix-ui/react-select": "^2.1.4",
    "@radix-ui/react-slot": "^1.1.1",
    "@radix-ui/react-toast": "^1.2.4",
    "better-auth": "^1.3.4",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cmdk": "^1.0.4",
    "deepmerge": "^4.3.1",
    "framer-motion": "^12.16.0",
    "fuse.js": "^7.1.0",
    "markdown-to-jsx": "^7.7.6",
    "react-hook-form": "^7.54.2",
    "react-intlayer": "workspace:*",
    "rollup-preserve-directives": "^1.1.3",
    "shiki": "^3.2.1",
    "tailwind-merge": "^3.3.0",
    "zod": "^3.25.56",
    "zustand": "^4.5.6"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^3.2.6",
    "@intlayer/backend": "workspace:*",
    "@shikijs/transformers": "^3.2.1",
    "@storybook/addon-essentials": "^8.6.7",
    "@storybook/addon-interactions": "^8.6.7",
    "@storybook/addon-links": "^8.6.7",
    "@storybook/addon-onboarding": "^8.6.7",
    "@storybook/blocks": "^8.6.7",
    "@storybook/react": "^8.5.0",
    "@storybook/react-vite": "^8.6.7",
    "@storybook/test": "^8.6.7",
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "@tailwindcss/cli": "^4.0.14",
    "@tailwindcss/vite": "^4.0.14",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.2.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/espree": "^10.1.0",
    "@types/node": "^22.15.30",
    "@types/react": ">=16.0.0",
    "@types/react-dom": ">=16.0.0",
    "@typescript-eslint/parser": "^8.33.1",
    "@utils/eslint-config": "workspace:*",
    "@utils/ts-config": "workspace:*",
    "@utils/ts-config-types": "workspace:*",
    "@utils/tsup-config": "workspace:*",
    "@vitejs/plugin-react": "^4.3.4",
    "concurrently": "^9.1.2",
    "eslint": "^9.28.0",
    "fast-glob": "^3.3.3",
    "lucide-react": "^0.513.0",
    "prettier": "^3.5.3",
    "rimraf": "^6.0.1",
    "storybook": "^8.6.7",
    "tailwindcss": "^4.1.8",
    "typescript": "^5.8.3",
    "vite": "^6.3.5",
    "vite-plugin-dts": "^4.5.3",
    "vitest": "^3.2.2"
  },
  "peerDependencies": {
    "@intlayer/api": "workspace:*",
    "@intlayer/config": "workspace:*",
    "@intlayer/core": "workspace:*",
    "@intlayer/dictionaries-entry": "workspace:*",
    "@intlayer/editor-react": "workspace:*",
    "@monaco-editor/react": "^4.7.0",
    "clsx": "^2.1.1",
    "framer-motion": "^12.16.0",
    "fuse.js": "^7.1.0",
    "intlayer": "workspace:*",
    "react": ">=16.0.0",
    "react-dom": ">=16.0.0",
    "react-intlayer": "workspace:*",
    "tailwind-merge": "^3.3.0",
    "zustand": "^4.5.6"
  }
}
